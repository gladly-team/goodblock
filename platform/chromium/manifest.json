{
    "manifest_version": 2,

    "name": "Goodblock",
    "version": "0.0.0.1",

    "default_locale": "en",
    "description": "__MSG_extShortDesc__",
    "icons": {
        "16": "img/icon_16.png",
        "128": "img/icon_128.png"
    },

    "browser_action": {
        "default_icon": "img/browsericons/icon19-off.png",
        "default_title": "Goodblock",
        "default_popup": "popup.html"
    },

    "web_accessible_resources": [
        "img/browsericons/*.png",
        "js/contentscript-goodblock.js",
        "lib/react-with-addons.js"
    ],

    "author": "The Goodblock Development Team",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "exclude_matches": ["http://gladlyads.xyz/*", "https://gladlyads.xyz/*"],
            "js": ["js/vapi-client.js", "js/contentscript-start.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "exclude_matches": ["http://gladlyads.xyz/*", "https://gladlyads.xyz/*"],
            "js": ["js/contentscript-end.js"],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "exclude_matches": ["http://gladlyads.xyz/*", "https://gladlyads.xyz/*"],
            "css": ["css/contentscript-goodblock.css"],
            "js": ["lib/EventEmitter.min.js", "js/contentscript-goodblock.js"],
            "run_at": "document_idle",
            "all_frames": false
        },
        {
            "matches": [
                "https://*.adblockplus.org/*",
                "https://*.adblockplus.me/*",
                "https://www.fanboy.co.nz/*"
            ],
            "js": ["js/subscriber.js"],
            "run_at": "document_idle"
        }
    ],
    "minimum_chrome_version": "22.0",
    "options_page": "dashboard.html",
    "options_ui": {
        "page": "options_ui.html"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "short_name": "Goodblock"
}
